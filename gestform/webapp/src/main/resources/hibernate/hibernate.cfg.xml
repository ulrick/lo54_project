<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools. -->
<hibernate-configuration>
	<session-factory>
		<!-- datasource -->
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/gesform_db</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property> 

		<!-- show SQL statements -->
		<property name="hibernate.show_sql">true</property>
		
		<!-- Must be configured to load the map file -->
		
		<mapping resource="mapping/Course.hbm.xml"/>
		<!-- mapping class="utbm.lo54.webapp.model.Course"/>-->
		
		<mapping resource="mapping/Location.hbm.xml"/>
		<!-- <mapping class="utbm.lo54.webapp.model.Location" />-->
		
		<mapping resource="mapping/CourseSession.hbm.xml" /> 
		<!-- <mapping class="utbm.lo54.webapp.model.CourseSession" />-->
		
		<mapping resource="mapping/Client.hbm.xml"/>
		<!-- <mapping class="utbm.lo54.webapp.model.Client"/>-->
		
		
	</session-factory>
</hibernate-configuration>